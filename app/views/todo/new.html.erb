<h1>Add a Todo</h1>
    <form action="/todo/create" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
            <input type="text" name="description" placeholder="Add a New To-Do">
            <input type="number" name="pomodoro_estimate" placeholder="Pomodoro Estimate">
            <input id="add-new-to-do-button" type="submit" value="Add To-Do">
    </form>
    
    <a href="index.html">Back</a>